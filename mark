pip install chardet
import chardet

with open("path/to/file.csv", 'rb') as f:
    rawdata = f.read(100000)  # Read a chunk of the file
    result = chardet.detect(rawdata)
    enc = result['encoding']
    print("Detected encoding:", enc)

import pandas as pd
df = pd.read_csv("path/to/file.csv", encoding=enc)
